<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit_name"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edit_song_details" />

    <EditText
        android:id="@+id/edit_audio_title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter song title"/>

    <EditText
        android:id="@+id/edit_audio_artist_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter artist name"/>

    <EditText
        android:id="@+id/edit_audio_album_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter album name"/>


    <ImageView
        android:id="@+id/edit_audio_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/edit_song_choose_image_button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Choose album image" />

    <EditText
        android:id="@+id/edit_audio_genre_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter genre"/>

    <Button
        android:id="@+id/edit_song_save_button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Save" />

</LinearLayout>